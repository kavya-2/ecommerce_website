<h1>Products</h1>
<%= link_to 'New Product', new_admin_product_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= truncate(product.description, length: 100) %></td>
        <td>
          <%= link_to 'Show', admin_product_path(product), class: 'btn btn-secondary' %>
          <%= link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-warning' %>
          <%= link_to 'Delete', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
