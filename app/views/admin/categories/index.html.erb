<h1>Categories</h1>

<%= form_with url: admin_categories_path, method: :get, local: true, class: 'mb-3' do %>
  <div class="form-group">
    <%= label_tag :q, 'Search Categories' %>
    <%= text_field_tag :q, params[:q], class: 'form-control' %>
  </div>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<%= link_to 'New Category', new_admin_category_path, class: 'btn btn-primary mb-3' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <%= link_to 'Show', admin_category_path(category), class: 'btn btn-secondary' %>
          <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-warning' %>
          <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>